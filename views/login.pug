extends layout

block content
  .container
    h1.main-headers Admin login
    br
    .row
      .col-sm-4
      .col-sm-4
        form.adminform(role='form', action="/login",method="post")
          .form-group
              input.form-control(type='text', name="username", placeholder='Admin Username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
            p(style='color: white') #{message}
          button.btn.btn-default(type='submit') Submit
          a(href='/')
            button.btn.btn-primary(type="button") Cancel
      .col-sm-4